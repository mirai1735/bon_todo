<div class="posts-show">
  <div class="main-pshow">
    <div class="container">
      <h2>List Details</h2> 

      <div class="show-item">
        <%= link_to("/posts/#{@post.id}/edit") do %>
        <input name="title" type="text" placeholder="title" value="<%= @post.title %>" readonly>
        <textarea name="content" type="text" placeholder="text" readonly><%= @post.content %></textarea>
        <% end %>
      </div>

      <a href="javascript:history.back()" style="color: #ff706c;">[戻る]</a>
    </div>
  </div>
</div>